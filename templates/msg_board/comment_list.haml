- extends "smartmin/read.html"
- load smartmin i18n comments

- block pre-content
  .page-header
    %h2 Message Board

- block content
  .ng-cloak.row{ ng-controller:"MessageBoardController", ng-init:"init()", ng-cloak:"" }
    .col-md-8
      {% render_comment_form for request.org %}

      .comments
        .comment.clearfix{ ng-repeat:"comment in comments"}
          %button.btn-default.btn-xs.pin{ type:"button", ng-click:"onPin(comment)" }
            %i.glyphicon.glyphicon-pushpin
          .event-time
            <cp-date time="comment.submitted_on" />
          %a{ ng-href:"/user/read/[[ comment.user.id ]]/" }><
            [[ comment.user.name ]]
          \:
          [[ comment.comment ]]

    .col-md-4
      .comments
        .comment.clearfix{ ng-repeat:"comment in pinnedComments"}
          %button.btn-default.btn-xs.unpin{ type:"button", ng-click:"onUnpin(comment)" }
            %i.glyphicon.glyphicon-remove
          .event-time
            <cp-date time="comment.submitted_on" />
          %a{ ng-href:"/user/read/[[ comment.user.id ]]/" }><
            [[ comment.user.name ]]
          \:
          [[ comment.comment ]]

- block extra-style
  {{ block.super }}
  :css
    .messages {
      margin: 4px;
      background-color: #ccc;
      border-radius: 5px;
      text-color: #493750;
      width: fit-content;
      padding: 5px;
    }
    .comment {
      font-size: 15px;
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    }
    .user_name {
      font-size: 10px;
      text-align: right;
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    }
    .comment {
      padding: 12px;
      margin-bottom: 16px;
      border: 1px solid transparent;
      border-radius: 4px;
      -webkit-box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05);
      box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05);
      background-color: #FDEECF;
      border-color: #F0E1C4;
    }

    .comment .event-time {
      float: right;
      font-size: 0.7em;
      margin-left: 5px;
      margin-bottom: 5px;
    }

    .sendform {
      text-align: center;
      padding-bottom: 1em;
    }
    .sendform textarea {
      width: 100%;
      border-bottom-left-radius: 0;
      border-bottom-right-radius: 0;
    }
    .sendform-controls {
      background-color: #F3F3F3;
      border-width: 0 0 1px 1px;
      border-style: solid;
      border-color: #CCC;
      border-radius: 0 0 4px 4px;
    }
    .sendform-controls .chars-left {
      padding: 6px 12px;
      display: inline-block;
      color: #888;
    }
    .sendform-controls button {
      border-bottom: none;
      border-top: none;
      border-top-left-radius: 0;
      border-top-right-radius: 0;
      border-bottom-left-radius: 0;
    }
    button.pin, button.unpin{
      color: #999;
      float: right;
      margin-left: 5px;
      background: transparent;
      border-color: transparent;
      margin-top: -4px;
    }
    button.pin:hover, button.unpin:hover {
      background: transparent;
      border-color: #ccc;
    }
