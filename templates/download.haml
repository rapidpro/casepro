-extends "smartmin/read.html"
-load i18n

-block pre-content
  .page-header
    %h2
      {{ title }}

-block content
  -if not file_error
    .{ style:"margin: 30px 0;" }
      -blocktrans trimmed
        Your download should start automatically. If it doesn't start in a few seconds, use the button below to download.
    %a.btn.btn-primary{ href: "{{ download_url }}" }
      %span.glyphicon.glyphicon-download{ style: "margin-right: 5px" }
      -trans "Download Now"
  -else
    .alert.alert-warning
      {{ file_error }}

-block extra-script
  :javascript
    {% if not file_error %}
    $(function() {
      window.location.href = "{{ download_url }}";
    });
    {% endif %}